{
  "name": "peta-wiki",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "playwright test",
    "test:e2e": "playwright test --headed",
    "test:coverage": "vitest --coverage",
    "build:analyze": "vite build --mode analyze",
    "build:prod": "vite build --mode production",
    "deploy": "vercel --prod",
    "deploy:staging": "vercel --preview",
    "migrate": "chmod +x scripts/migrate.sh && ./scripts/migrate.sh",
    "migrate:up": "chmod +x scripts/migrate.sh && ./scripts/migrate.sh up",
    "migrate:down": "chmod +x scripts/migrate.sh && ./scripts/migrate.sh down",
    "backup": "chmod +x scripts/backup.sh && ./scripts/backup.sh",
    "health": "curl -f https://petawiki.vercel.app/api/health",
    "setup:prod": "chmod +x scripts/setup-production.sh && ./scripts/setup-production.sh",
    "docker:build": "docker build -t petawiki:latest .",
    "docker:run": "docker run -p 3000:3000 petawiki:latest",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix --audit-level high",
    "performance:analyze": "npm run build:analyze && npm run test:coverage",
    "precommit": "npm run type-check && npm run lint && npm run test"
  },
  "dependencies": {
    "@google/genai": "*",
    "@supabase/supabase-js": "^2.39.0",
    "clsx": "^2.1.0",
    "html2pdf.js": "^0.10.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.13.0",
    "recharts": "^2.12.0",
    "resend": "^3.2.0",
    "svix": "^1.21.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
